{
  "manifest_version": 3,
  "name": "YouTube Music Animated Artwork",
  "version": "2.0",
  "description": "แสดง animated album artwork จาก Apple Music บนหน้า player ของ YouTube Music",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://clients.dodoapps.io/*",
    "https://music.apple.com/*",
    "https://mvod.itunes.apple.com/*",
    "https://itunes.apple.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
